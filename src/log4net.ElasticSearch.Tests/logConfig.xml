<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
  <log4net>
    <appender name="ElasticSearchAppender" type="log4net.ElasticSearch.ElasticSearchAppender, log4net.ElasticSearch">
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%d{ABSOLUTE} %-5p %c{1}:%L - %m%n" />
      </layout>
      <connectionString value="Server=127.0.0.1;Index=log_test;Port=9200;rolling=false"/>
      <lossy value="false" />
        <evaluator type="log4net.Core.LevelEvaluator">
            <threshold value="ALL" />
        </evaluator>
      <bufferSize value="1" />
    </appender>
    <appender name="ElasticSearchAppender_BufferTimer" type="log4net.ElasticSearch.ElasticSearchAppender, log4net.ElasticSearch">
      <connectionString value="Server=127.0.0.1;Index=log_test;Port=9200;rolling=false"/>
      <lossy value="false" />
      <bufferSize value="1000" />
      <bufferTimeout value="10" />
    </appender>
    <root>
      <level value="ALL"/>
    </root>
    <logger name="Common">
      <level value="ALL" />
      <appender-ref ref="ElasticSearchAppender" />
    </logger>
    <logger name="ElasticSearchAppender_BufferTimer">
      <level value="ALL" />
      <appender-ref ref="ElasticSearchAppender_BufferTimer" />
    </logger>
  </log4net>
</configuration>